<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - web ADMIN</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/web.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="container-fluid">
        <div class="row min-vh-100">
            <!-- Sidebar -->
            <nav class="col-md-3 col-lg-2 d-md-block bg-dark-subtle text-white border-end sidebar py-4">
                <div class="position-sticky">
                    <a class="navbar-brand mb-4 d-block" asp-area="" asp-page="/Index">ADMIN</a>
                    <ul class="nav flex-column">
                        <li class="nav-item mb-2">
                            <a class="nav-link text-danger" href="~/Admin/Index">Admin</a>
                        </li>
                        <li class="nav-item mb-2">
                            <a class="nav-link bg-primary text-white" href="~/Admin/MySkillBoard/Index">My Skills</a>
                        </li>
                        <li class="nav-item mb-2">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                        </li>
                    </ul>
                    <div class="mt-4">
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </nav>

            <!-- Main content -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 bg-light d-flex flex-column" role="main">
                <div class="flex-grow-1 py-4">
                    @RenderBody()
                </div>
                <footer class="border-top footer text-muted mt-auto py-3">
                    <div class="container-fluid">
                        &copy; 2025 - web - <a asp-area="" asp-page="/Privacy">Privacy</a>
                    </div>
                </footer>
            </main>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
