@page
@model web.Pages.Admin.MySkillBoard.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>My Skill Dashboard</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                #
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Skill[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Skill[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Skill[0].Priority)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Skill[0].Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @{
        var i = 0;
    }
    @foreach (var item in Model.Skill) 
    {
        i++;
        <tr>
            <td>
                @i
            </td>
            <td>
                @item.Name
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Priority)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
